<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="199dp"
            android:layout_height="34dp"
            android:layout_marginTop="129dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:text="@string/tv_title_sign_in"
            android:textColor="@color/main_gray"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="42dp"
            android:layout_marginTop="72dp"
            android:background="@drawable/ic_rectangle_background_grey"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="@string/et_first_name"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/main_text_gray"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="@string/et_last_name"
            android:fontFamily="@font/montserrat"
            android:textSize="11sp"
            android:textColor="@color/main_text_gray"
            android:background="@drawable/ic_rectangle_background_grey"
            android:layout_marginHorizontal="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_first_name" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:focusableInTouchMode="true"
            android:hint="@string/et_email"
            android:fontFamily="@font/montserrat"
            android:textSize="11sp"
            android:textColor="@color/main_text_gray"
            android:background="@drawable/ic_rectangle_background_grey"
            android:layout_marginHorizontal="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_last_name" />

        <Button
            android:id="@+id/btn_sign_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:focusableInTouchMode="true"
            android:enabled="false"
            android:hint="@string/et_sign_in"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="14sp"
            android:textColorHint="@color/white"
            android:background="@drawable/ic_rectangle_background_blue"
            android:layout_marginHorizontal="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_email" />

        <TextView
            android:id="@+id/tv_subtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/subtext_already_have_an_account"
            android:textColor="@color/second_text_gray"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_sign_in" />


        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="160dp"
            android:layout_marginStart="160dp"
            android:padding="10dp"
            android:gravity="center"
            android:focusableInTouchMode="true"
            android:text="@string/btn_log_in"
            android:fontFamily="@font/montserrat"
            android:textSize="10sp"
            android:textColor="@color/link_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_sign_in" />

        <ImageView
            android:id="@+id/iv_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_google_logo"
            android:layout_marginTop="70dp"
            android:layout_marginStart="99dp"
            android:layout_marginEnd="11dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_sign_with_google"
            app:layout_constraintTop_toBottomOf="@+id/tv_subtext" />

        <TextView
            android:id="@+id/tv_sign_with_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sign_in_with_google"
            android:fontFamily="@font/montserrat"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginTop="76dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_subtext" />

        <ImageView
            android:id="@+id/iv_apple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_apple_logo"
            android:layout_marginTop="38dp"
            android:layout_marginStart="99dp"
            android:layout_marginEnd="11dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_sign_with_apple"
            app:layout_constraintTop_toBottomOf="@+id/iv_google" />

        <TextView
            android:id="@+id/tv_sign_with_apple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="@string/sign_in_with_apple"
            android:fontFamily="@font/montserrat"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sign_with_google" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>
